#include <iostream>
 
using namespace std;
 
int main()
{
   int arr[3],temp,mini;
 
   for(int i = 0; i< 3;i++){
    cin >> arr[i];
   }
 //Using Bubble sort algorithm
   for(int i = 0;i<3;i++){
    for(int j = i + 1; j < 3 ; j++){
        if(arr[i] > arr[j]){
            temp = arr[i];
            arr[i] = arr[j];
            arr[j] = temp;
        }
    }
   }
 
   if(arr[0] + arr[1] > arr[2]){
        cout << 0;
   }else if (arr[0] + arr[1] == arr[2]){
        cout << 1;
   }else{
        mini = arr[2] - (arr[1] + arr[0]) + 1;
        cout << mini ;
   }
 
}
